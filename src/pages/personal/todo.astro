---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="My Tracker">
  <main>
    <div class="todo-container">
      
      <div class="header">
        <div class="title-group">
          <h1>&#128640; My Tracker</h1>
          <span class="badge" id="countBadge">0 Tasks</span>
        </div>
        <div class="header-actions">
           <button id="exportBtn" class="btn-subtle" title="Download Backup">&#11015; Export</button>
           <button id="importBtn" class="btn-subtle" title="Restore Backup">&#11014; Import</button>
           <button id="resetBtn" class="btn-reset">Start New Session</button>
        </div>
      </div>
      
      <input type="file" id="fileInput" accept=".json" style="display:none" />

      <div class="input-card">
        <div class="input-row">
          <input type="text" id="taskInput" placeholder="What needs to be done?" />
          <button id="posBtn" class="btn-icon" title="Insert Position">&#128205;</button> 
        </div>
        <div class="input-row">
          <input type="text" id="categoryInput" placeholder="Categories (e.g. Work)" />
          <button id="addBtn" class="btn-add">Add Task</button>
        </div>
        <div id="posIndicator" class="pos-badge hidden">
          Insert above: <b id="posTargetName"></b><span id="clearPos" class="close-x">&times;</span>
        </div>
      </div>

      <div class="list-header">
        <span class="col-task">Task List</span>
        <div class="col-history" id="historyHeaders"></div>
      </div>

      <ul id="taskList" class="task-list"></ul>
    </div>

    <dialog id="detailModal" class="modal wide-modal">
      <div class="modal-wrapper"> 
        <div class="modal-header">
            <button id="btnHistoryEdit" class="btn-dashed hidden" style="margin-right:15px; padding:4px 10px; font-size:0.8rem;">&#9999; Edit Stats</button>
          
          <h3 id="modalHeaderTitle" style="flex:1; text-align:center;">Task Details</h3>
          <button onclick="closeModal()" class="btn-close-x">&times;</button>
        </div>
        
        <div class="modal-body">
            
            <div id="metricsPanel" class="metrics-panel">
                <div class="metric-box left-metric">
                    <label id="lblCounter">Counter</label>
                    <div class="metric-controls">
                        <button class="btn-circle" onclick="updateCounter(-1)">-</button>
                        <span id="displayCounter" class="metric-value">0</span>
                        <button class="btn-circle" onclick="updateCounter(1)">+</button>
                    </div>
                </div>
                <div class="metric-box right-metric">
                    <label id="lblTimer">Timer</label>
                    <div class="timer-display" id="displayTimer">00:00:00</div>
                    <div class="timer-controls">
                        <button id="btnTimerToggle" class="btn-tiny" onclick="toggleTimer()">Start</button>
                        <button class="btn-tiny btn-danger" onclick="resetTimer()">Reset</button>
                    </div>
                </div>
            </div>

            <div id="historyStatsDisplay" class="metrics-panel hidden">
                <div class="metric-box left-metric">
                    <label>Recorded Count</label>
                    <span id="readOnlyCount" class="metric-value">0</span>
                </div>
                <div class="metric-box right-metric">
                    <label>Recorded Time</label>
                    <span id="readOnlyTime" class="timer-display">00:00:00</span>
                </div>
                <div class="metric-box" style="border-left:1px solid var(--border); padding-left:10px;">
                     <label>Status</label>
                     <span id="readOnlyStatus" class="chip">Pending</span>
                </div>
            </div>

            <div id="historyMetricsPanel" class="metrics-panel hidden history-edit-mode">
                 <div class="history-controls-row">
                    <label class="cb-label">
                        <input type="checkbox" id="histCompletedCb" class="big-cb">
                        <span>Mark as Completed?</span>
                    </label>
                 </div>
                 <div class="history-inputs-row">
                     <div class="metric-box">
                        <label>Count</label>
                        <input type="number" id="histCounterInput" class="modal-num-input" />
                     </div>
                     <div class="metric-box">
                        <label>Time (HH:MM:SS)</label>
                        <input type="text" id="histTimerInput" class="modal-num-input" placeholder="00:00:00" />
                     </div>
                 </div>
                 <button id="saveHistoryBtn" class="btn-save-small">Update History Record</button>
            </div>

          <div id="viewModeContainer" class="mode-container">
              <h2 id="viewTitle" class="view-title-text"></h2>
              
              <div class="section">
                  <label>&#128230; Required Items</label> 
                  <div id="viewItemsList" class="view-list-container"></div>
              </div>

              <div class="section">
                  <label>&#128221; Procedure</label> 
                  <div id="viewStepsList" class="view-steps-container"></div>
              </div>
          </div>
<div id="editModeContainer" class="mode-container hidden">
            <div class="section">
                <label>Task Title</label>
                <input type="text" id="modalTaskTitle" class="modal-input-title" placeholder="Task Name..." />
            </div>

            <div class="section">
                <label>Category</label>
                <input type="text" id="modalCategoryInput" class="step-input" placeholder="e.g. Work" />
            </div>
            <div class="section">
                <label>Unit Measurement</label>
                <input type="text" id="modalUnitInput" class="step-input" placeholder="e.g. Pages, Reps, Minutes..." />
            </div>
            
            <div class="section">
              <label>Position</label>
                <button id="moveTaskBtn" class="btn-dashed" style="text-align:left;">&#128205; Move Task Location...</button>
              </div>
              <div class="section">
                  <label>&#128230; Edit Items</label>
                  <div class="items-editor">
                      <div id="editItemsList" class="tags-container"></div>
                      <div class="input-group-small">
                          <input type="text" id="itemInput" class="item-input" placeholder="New Item..." />
                          <button id="addItemBtn" class="btn-action-small">Add</button>
                      </div>
                  </div>
              </div>
              <div class="section">
                  <label>&#128221; Edit Procedure</label>
                  <div id="editStepsList" class="steps-editor"></div>
                  <button id="addStepBtn" class="btn-dashed">+ Add Step</button>
              </div>
              <div class="save-row">
                  <button id="saveDetailBtn" class="btn-save">Save Changes</button>
              </div>
          </div>
        </div>
      </div>
    </dialog>

    <dialog id="posModal" class="modal">
      <div class="modal-wrapper">
        <h3 id="posModalTitle">Select Position</h3>
        <div id="posList" class="pos-list"></div>
        <button onclick="document.getElementById('posModal').close()" class="btn-cancel">Cancel</button>
      </div>
    </dialog>
  </main>
</Layout>

<script>
  // INTERFACES
  interface HistoryLog {
    sessionId: string;
    completed: boolean;
    snapshotCounter: number;
    snapshotTimer: number;
  }
  interface Task {
    id: number;
    text: string;
    completed: boolean;
    priority: number;
    category: string; // <-- Now strictly a string
    requiredItems: string | string[]; 
    procedure: string | string[];
    activeCounter: number;
    activeTimer: number;
    history: HistoryLog[];
    unit: string;
  }
  interface Session { sessionId: string; timestamp: number; }

  // ... (Global declarations, URL constants, State vars remain same) ...
  // GLOBAL DECLARATIONS
  declare global {
    interface Window {
      toggleDropdown: (e: Event, id: number) => void;
      openModal: (id: number, mode?: 'view' | 'edit') => void;
      openHistoryModal: (taskId: number, sessionId: string) => void;
      closeModal: () => void;
      deleteItem: (idx: number) => void;
      updateStep: (idx: number, val: string) => void;
      deleteStep: (idx: number) => void;
      moveStep: (idx: number, dir: number) => void;
      remove: (id: number) => void;
      updateCounter: (delta: number) => void;
      toggleTimer: () => void;
      resetTimer: () => void;
    }
  }

  const BASE_URL = "http://localhost:8787";
  const API_URL = `${BASE_URL}/todos`; 
  const HIST_API_URL = `${API_URL}/history`;
  
  // STATE
  let todos: Task[] = [];
  let sessions: Session[] = [];
  let targetPriority: number | null = null; 
  let currentId: number | null = null;
  let editingSessionId: string | null = null; 
  
  // Edit State
  let tempItems: string[] = [];
  let tempSteps: string[] = [];
  
  // Timer State
  let timerInterval: any = null;
  let tempTimerSeconds = 0;
  let tempCounterValue = 0;
  let isTimerRunning = false;

  async function loadTasks() {
    try {
      const res = await fetch(API_URL);
      const data = await res.json();
      todos = data.tasks || [];
      sessions = data.sessions || [];
      render();
    } catch(e) { console.error(e); }
  }

  function render() {
    const list = document.getElementById('taskList') as HTMLElement;
    const headerRow = document.getElementById('historyHeaders') as HTMLElement;
    document.getElementById('countBadge')!.innerText = `${todos.length} Tasks`;
    list.innerHTML = '';

    const visibleSessions = [...sessions].reverse().slice(-6); 
    
    let headerHtml = '';
    visibleSessions.forEach(s => {
      const d = new Date(s.timestamp);
      headerHtml += `<div class="h-col-header"><span>${d.toLocaleDateString('en-US',{weekday:'short'})}</span></div>`;
    });
    headerHtml += `<div class="h-col-header active-header"><span>NOW</span></div>`;
    headerRow.innerHTML = headerHtml;

    todos.forEach(t => createTaskElement(t, visibleSessions));
  }

  function createTaskElement(task: Task, visibleSessions: Session[]) {
    const li = document.createElement('li');
    li.className = `task-card ${task.completed ? 'done' : ''}`;

    const hasDetails = (task.requiredItems?.length > 0) || (task.procedure?.length > 0);
    const detailIndicator = hasDetails ? '<span class="icon-indicator" title="Has Details">&#128221;</span>' : '';

    const cbContainer = document.createElement('div');
    cbContainer.className = 'cb-container';
    const cb = document.createElement('input');
    cb.type = 'checkbox'; cb.className = 'big-cb'; cb.checked = task.completed;
    cb.onclick = (e) => { e.stopPropagation(); toggle(task.id, task.completed); };
    cbContainer.appendChild(cb);

    const titleSection = document.createElement('div');
    titleSection.className = 'title-section';

    // --- UPDATED: SIMPLE STRING RENDERING ---
    let catHtml = '';
    if (task.category && task.category.trim() !== '') {
        catHtml = `<span class="chip">${task.category}</span>`;
    }
    // ----------------------------------------

    titleSection.innerHTML = `
        <div class="task-main-text"><span class="task-title">${task.text}</span>${detailIndicator}</div>
        <div class="task-meta">${catHtml}</div>
    `;
    titleSection.onclick = () => window.openModal(task.id, 'view');

    // History Grid logic remains same...
    const historyGrid = document.createElement('div');
    historyGrid.className = 'history-grid';
    visibleSessions.forEach(s => {
      const log = task.history ? task.history.find(h => h.sessionId === s.sessionId) : null;
      const isDone = log ? log.completed : false;
      const cell = document.createElement('div');
      cell.className = 'h-cell';
      const box = document.createElement('div');
      box.className = `h-box ${isDone?'h-done':'h-miss'}`;
      if(!log) box.style.opacity = '0.3'; 
      box.style.cursor = "pointer";
      box.onclick = (e) => { e.stopPropagation(); window.openHistoryModal(task.id, s.sessionId); };
      if(log) { box.title = `Stats: ${log.snapshotCounter} | ${formatTime(log.snapshotTimer)}`; }
      cell.append(box);
      historyGrid.appendChild(cell);
    });

    const liveCell = document.createElement('div');
    liveCell.className = 'h-cell';
    const liveBox = document.createElement('div');
    liveBox.className = `h-box ${task.completed?'h-live-done':'h-live-pending'}`;
    liveBox.innerHTML = "&bull;";
    liveCell.append(liveBox);
    historyGrid.appendChild(liveCell);

    const dropdown = document.createElement('div');
    dropdown.className = 'dropdown';
    dropdown.innerHTML = `
        <button class="btn-icon btn-more" onclick="toggleDropdown(event, ${task.id})">&#8942;</button> 
        <div id="dropdown-${task.id}" class="dropdown-content">
            <div onclick="openModal(${task.id}, 'edit')">&#9999; Edit Details</div> 
            <div onclick="remove(${task.id})" class="danger-text">&#128465; Delete</div> 
        </div>
    `;

    li.append(cbContainer, titleSection, dropdown, historyGrid);
    document.getElementById('taskList')!.appendChild(li);
  }

  // --- MODAL & METRIC LOGIC (Timer functions unchanged) ---
  function stopLiveTimer() {
      if(timerInterval) clearInterval(timerInterval);
      isTimerRunning = false;
      const btn = document.getElementById('btnTimerToggle');
      if(btn) { btn.innerText = "Start"; btn.classList.remove('btn-active'); }
  }

  async function saveMetrics() {
      if(currentId === null || editingSessionId !== null) return; 
      await fetch(`${API_URL}/${currentId}`, {
          method:'PATCH', 
          headers:{'Content-Type':'application/json'}, 
          body: JSON.stringify({ activeCounter: tempCounterValue, activeTimer: tempTimerSeconds })
      });
      const t = todos.find(x => x.id === currentId);
      if(t) { t.activeCounter = tempCounterValue; t.activeTimer = tempTimerSeconds; }
  }

  window.updateCounter = (delta: number) => {
      tempCounterValue += delta;
      if(tempCounterValue < 0) tempCounterValue = 0;
      document.getElementById('displayCounter')!.innerText = tempCounterValue.toString();
      saveMetrics();
  };

  function formatTime(secs: number) {
      const h = Math.floor(secs / 3600);
      const m = Math.floor((secs % 3600) / 60);
      const s = secs % 60;
      return `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
  }
  
  function parseTimeToSeconds(timeStr: string) {
      const parts = timeStr.split(':').reverse();
      let seconds = 0;
      if(parts[0]) seconds += parseInt(parts[0]);
      if(parts[1]) seconds += parseInt(parts[1]) * 60;
      if(parts[2]) seconds += parseInt(parts[2]) * 3600;
      return isNaN(seconds) ? 0 : seconds;
  }

  window.toggleTimer = () => {
      const btn = document.getElementById('btnTimerToggle') as HTMLElement;
      if (isTimerRunning) {
          stopLiveTimer();
          saveMetrics();
      } else {
          isTimerRunning = true;
          btn.innerText = "Stop";
          btn.classList.add('btn-active');
          timerInterval = setInterval(() => {
              tempTimerSeconds++;
              document.getElementById('displayTimer')!.innerText = formatTime(tempTimerSeconds);
          }, 1000);
      }
  };

  window.resetTimer = () => {
      stopLiveTimer();
      if(confirm("Reset Timer to 0?")) {
        tempTimerSeconds = 0;
        document.getElementById('displayTimer')!.innerText = "00:00:00";
        saveMetrics();
      }
  };

  // --- UPDATED: OPEN MODAL LOGIC ---
  window.openModal = (id: number, mode: 'view' | 'edit' = 'view') => {
    stopLiveTimer();
    editingSessionId = null; 
    const task = todos.find(t => t.id === id);
    if (!task) return;
    currentId = id;
    const unitName = task.unit || 'units';

    document.getElementById('btnHistoryEdit')!.classList.add('hidden');
    document.getElementById('historyStatsDisplay')!.classList.add('hidden');
    document.getElementById('historyMetricsPanel')!.classList.add('hidden');

    document.getElementById('metricsPanel')!.classList.remove('hidden');

    tempCounterValue = task.activeCounter || 0;
    tempTimerSeconds = task.activeTimer || 0;
    document.getElementById('displayCounter')!.innerText = tempCounterValue.toString();
    document.getElementById('displayTimer')!.innerText = formatTime(tempTimerSeconds);
    document.getElementById('lblCounter')!.innerText = `How many ${unitName} you did`;
    document.getElementById('lblTimer')!.innerText = `How much time spent in ${unitName}`;
    
    try { tempItems = typeof task.requiredItems === 'string' ? JSON.parse(task.requiredItems) : (task.requiredItems || []); } catch(e) { tempItems = []; }
    try { tempSteps = typeof task.procedure === 'string' ? JSON.parse(task.procedure) : (task.procedure || []); } catch(e) { tempSteps = []; }

    const viewContainer = document.getElementById('viewModeContainer') as HTMLElement;
    const editContainer = document.getElementById('editModeContainer') as HTMLElement;
    
    if (mode === 'view') {
        viewContainer.classList.remove('hidden');
        editContainer.classList.add('hidden');
        document.getElementById('modalHeaderTitle')!.innerText = "Task Details";
        document.getElementById('viewTitle')!.innerText = task.text;
        
        const vItems = document.getElementById('viewItemsList')!;
        vItems.innerHTML = tempItems.length ? tempItems.map(i => `<span class="view-tag">${i}</span>`).join('') : '<span class="empty-text">No items.</span>';

        const vSteps = document.getElementById('viewStepsList')!;
        vSteps.innerHTML = tempSteps.length ? tempSteps.map((s, i) => `<div class="view-step-row"><span class="step-num">${i+1}.</span><span>${s}</span></div>`).join('') : '<span class="empty-text">No procedure.</span>';
    } else {
        viewContainer.classList.add('hidden');
        editContainer.classList.remove('hidden');
        document.getElementById('metricsPanel')!.classList.add('hidden');
        document.getElementById('modalHeaderTitle')!.innerText = "Edit Task";
        (document.getElementById('modalTaskTitle') as HTMLInputElement).value = task.text;
         (document.getElementById('modalUnitInput') as HTMLInputElement).value = unitName;
         
        // --- SIMPLE STRING VALUE ---
        (document.getElementById('modalCategoryInput') as HTMLInputElement).value = task.category || '';
        // ---------------------------
        
        renderEditContent();
    }
    (document.getElementById('detailModal') as HTMLDialogElement).showModal();
    document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));
  };

  // --- HISTORY MODAL LOGIC ---
  window.openHistoryModal = (taskId: number, sessionId: string) => {
      stopLiveTimer();
      currentId = taskId;
      editingSessionId = sessionId; 

      const task = todos.find(t => t.id === taskId);
      if(!task) return;
      
      const log = task.history.find(h => h.sessionId === sessionId);
      const countVal = log ? log.snapshotCounter : 0;
      const timerVal = log ? log.snapshotTimer : 0;
      const isComp = log ? log.completed : false;

      document.getElementById('metricsPanel')!.classList.add('hidden');
      
      const readOnlyPanel = document.getElementById('historyStatsDisplay')!;
      readOnlyPanel.classList.remove('hidden');
      document.getElementById('readOnlyCount')!.innerText = countVal.toString();
      document.getElementById('readOnlyTime')!.innerText = formatTime(timerVal);
      const statusSpan = document.getElementById('readOnlyStatus')!;
      statusSpan.innerText = isComp ? "Completed" : "Incomplete";
      statusSpan.style.color = isComp ? "var(--green)" : "var(--sub)";

      const editPanel = document.getElementById('historyMetricsPanel')!;
      editPanel.classList.add('hidden');
      (document.getElementById('histCounterInput') as HTMLInputElement).value = countVal.toString();
      (document.getElementById('histTimerInput') as HTMLInputElement).value = formatTime(timerVal);
      (document.getElementById('histCompletedCb') as HTMLInputElement).checked = isComp;

      const editBtn = document.getElementById('btnHistoryEdit')!;
      editBtn.classList.remove('hidden'); 
      editBtn.innerText = "✎ Edit Stats";
      
      editBtn.onclick = () => {
          const isCurrentlyEditing = !editPanel.classList.contains('hidden');
          if(isCurrentlyEditing) {
              editPanel.classList.add('hidden');
              readOnlyPanel.classList.remove('hidden');
              editBtn.innerText = "✎ Edit Stats";
          } else {
              editPanel.classList.remove('hidden');
              readOnlyPanel.classList.add('hidden');
              editBtn.innerText = "✕ Cancel Edit";
          }
      };

      document.getElementById('viewModeContainer')!.classList.remove('hidden');
      document.getElementById('editModeContainer')!.classList.add('hidden');
      document.getElementById('modalHeaderTitle')!.innerText = "History Record";
      document.getElementById('viewTitle')!.innerText = `${task.text} (Past)`;

      try { tempItems = typeof task.requiredItems === 'string' ? JSON.parse(task.requiredItems) : (task.requiredItems || []); } catch(e) { tempItems = []; }
      try { tempSteps = typeof task.procedure === 'string' ? JSON.parse(task.procedure) : (task.procedure || []); } catch(e) { tempSteps = []; }
      
      const vItems = document.getElementById('viewItemsList')!;
      vItems.innerHTML = tempItems.length ? tempItems.map(i => `<span class="view-tag">${i}</span>`).join('') : '<span class="empty-text">No items.</span>';
      const vSteps = document.getElementById('viewStepsList')!;
      vSteps.innerHTML = tempSteps.length ? tempSteps.map((s, i) => `<div class="view-step-row"><span class="step-num">${i+1}.</span><span>${s}</span></div>`).join('') : '<span class="empty-text">No procedure.</span>';

      (document.getElementById('detailModal') as HTMLDialogElement).showModal();
  };
  
  document.getElementById('saveHistoryBtn')!.onclick = async () => {
      if(!currentId || !editingSessionId) return;
      const newCount = parseInt((document.getElementById('histCounterInput') as HTMLInputElement).value) || 0;
      const newTimeStr = (document.getElementById('histTimerInput') as HTMLInputElement).value;
      const newCompleted = (document.getElementById('histCompletedCb') as HTMLInputElement).checked;
      const newTimerVal = parseTimeToSeconds(newTimeStr);

      await fetch(`${HIST_API_URL}/${currentId}/${editingSessionId}`, {
          method: 'PATCH',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({ snapshotCounter: newCount, snapshotTimer: newTimerVal, completed: newCompleted })
      });
      window.closeModal();
      loadTasks();
  };

  window.closeModal = () => {
      stopLiveTimer();
      if(editingSessionId === null) saveMetrics(); 
      (document.getElementById('detailModal') as HTMLDialogElement).close();
  };

  // --- EDIT CONTENT ---
  function renderEditContent() {
    const list = document.getElementById('editItemsList')!;
    list.innerHTML = tempItems.map((item, i) => 
        `<span class="edit-tag">${item} <button onclick="deleteItem(${i})">&times;</button></span>`
    ).join('');

    const stepList = document.getElementById('editStepsList')!;
    stepList.innerHTML = '';
    tempSteps.forEach((step, idx) => {
      const row = document.createElement('div');
      row.className = 'edit-step-row';
      row.innerHTML = `
        <div class="step-controls">
            <button onclick="moveStep(${idx}, -1)" ${idx===0?'disabled':''}>&#9650;</button>
            <button onclick="moveStep(${idx}, 1)" ${idx===tempSteps.length-1?'disabled':''}>&#9660;</button>
        </div>
        <span class="bullet">${idx+1}.</span>
        <input type="text" class="step-input" value="${step}" onchange="updateStep(${idx}, this.value)">
        <button onclick="deleteStep(${idx})" class="btn-del-step">&#128465;</button> 
      `;
      stepList.appendChild(row);
    });
  }

  window.moveStep = (idx: number, dir: number) => {
      if ((dir === -1 && idx === 0) || (dir === 1 && idx === tempSteps.length - 1)) return;
      const targetIdx = idx + dir;
      [tempSteps[idx], tempSteps[targetIdx]] = [tempSteps[targetIdx], tempSteps[idx]];
      renderEditContent();
  };

  const itemInput = document.getElementById('itemInput') as HTMLInputElement;
  const addItemBtn = document.getElementById('addItemBtn');
  function triggerAddItem() { if(itemInput.value.trim()){ tempItems.push(itemInput.value.trim()); itemInput.value=''; renderEditContent(); }}
  if(addItemBtn) addItemBtn.onclick = triggerAddItem;
  if(itemInput) itemInput.onkeydown = (e) => { if(e.key==='Enter') triggerAddItem(); };
  
  window.deleteItem = (i) => { tempItems.splice(i, 1); renderEditContent(); };
  document.getElementById('addStepBtn')!.onclick = () => { tempSteps.push(""); renderEditContent(); };
  window.updateStep = (i, v) => { tempSteps[i] = v; };
  window.deleteStep = (i) => { tempSteps.splice(i, 1); renderEditContent(); };

  // --- UPDATED: SAVE DETAILS ---
  document.getElementById('saveDetailBtn')!.onclick = async () => {
    const newTitle = (document.getElementById('modalTaskTitle') as HTMLInputElement).value;
    const newUnit = (document.getElementById('modalUnitInput') as HTMLInputElement).value;
    const newCat = (document.getElementById('modalCategoryInput') as HTMLInputElement).value; // Simple String

    await fetch(`${API_URL}/${currentId}`, {
      method: 'PATCH',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({ 
          text: newTitle, 
          unit: newUnit, 
          category: newCat, // Send Simple String
          requiredItems: tempItems, 
          procedure: tempSteps.filter(s=>s.trim()!=="") 
      })
    });
    window.closeModal();
    loadTasks();
  };

  // --- EXPORT & IMPORT ---
  const exportBtn = document.getElementById('exportBtn');
  const importBtn = document.getElementById('importBtn');
  const fileInput = document.getElementById('fileInput') as HTMLInputElement;

  if(exportBtn) {
    exportBtn.onclick = async () => {
        try {
            const res = await fetch(`${API_URL}/export`);
            if(!res.ok) throw new Error("Export failed");
            const blob = await res.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `todo-backup-${new Date().toISOString().slice(0,10)}.json`;
