---
import Layout from '../../layouts/Layout.astro';
import MistakeFloater from '../../components/test.tsx';
import MistakeFloate from '../../components/correctness.tsx';
import TodoFloater from '../../components/TodoFloater.tsx';
---

<Layout title="My Tracker">
  <main>
    <MistakeFloater client:load />
    <MistakeFloate client:load />
    <TodoFloater client:load />

    <canvas id="effectCanvas"></canvas>

    <div class="todo-container">
      <ul id="taskList" class="task-list"></ul>
    </div>

    <button id="fabAddBtn" class="fab-btn" title="Menu & Add">&#43;</button>

    <dialog id="addModal" class="modal">
        <div class="modal-wrapper" style="height: auto; min-height: 0;">
            <div class="modal-header">
                <h3>Control Center</h3>
                <button onclick="document.getElementById('addModal').close()" class="btn-close-x">&times;</button>
            </div>
            <div class="modal-body">
                <div id="posIndicator" class="pos-badge hidden" style="margin-bottom: 10px;">
                    Insert above: <b id="posTargetName"></b><span id="clearPos" class="close-x">&times;</span>
                </div>
                <div class="input-card" style="border:none; background:transparent; padding:0;">
                    <div class="input-row">
                      <input type="text" id="taskInput" placeholder="New Task Name..." />
                      <button id="posBtn" class="btn-icon" title="Insert Position">&#128205;</button> 
                    </div>
                    <div class="input-row">
                      <input type="text" id="categoryInput" placeholder="Category" />
                      <button id="addBtn" class="btn-add">Add</button>
                    </div>
                </div>
                <hr class="modal-divider" />
                <div class="header-actions-col">
                   <div class="action-row">
                       <span class="badge" id="countBadge" style="margin:0;">0 Tasks</span>
                       <button id="resetBtn" class="btn-reset">Start New Session</button>
                   </div>
                   <div class="action-row">
                       <button id="exportBtn" class="btn-subtle" style="flex:1;">&#11015; Export</button>
                       <button id="importBtn" class="btn-subtle" style="flex:1;">&#11014; Import</button>
                   </div>
                   <input type="file" id="fileInput" accept=".json" style="display:none" />
                </div>
            </div>
        </div>
    </dialog>

    <dialog id="detailModal" class="modal wide-modal">
      <div class="modal-wrapper"> 
        <div class="modal-header">
            <button id="btnHistoryEdit" class="btn-dashed hidden" style="margin-right:15px; padding:4px 10px; font-size:0.8rem;">&#9999; Edit Stats</button>
          <h3 id="modalHeaderTitle" style="flex:1; text-align:center;">Task Details</h3>
          <button onclick="closeModal()" class="btn-close-x">&times;</button>
        </div>
        <div class="modal-body">
            <div id="metricsPanel" class="metrics-panel">
                <div class="metric-box left-metric">
                    <label id="lblCounter">Counter</label>
                    <div class="metric-controls">
                        <button class="btn-circle" onclick="updateCounter(-1)">-</button>
                        <span id="displayCounter" class="metric-value">0</span>
                        <button class="btn-circle" onclick="updateCounter(1)">+</button>
                    </div>
                </div>
                <div class="metric-box right-metric">
                    <label id="lblTimer">Timer</label>
                    <div class="timer-display" id="displayTimer">00:00:00</div>
                    <div class="timer-controls">
                        <button id="btnTimerToggle" class="btn-tiny" onclick="toggleTimer()">Start</button>
                        <button class="btn-tiny btn-danger" onclick="resetTimer()">Reset</button>
                    </div>
                </div>
            </div>
            
            <div id="historyStatsDisplay" class="metrics-panel hidden">
                <div class="metric-box left-metric">
                    <label>Recorded Count</label>
                    <span id="readOnlyCount" class="metric-value">0</span>
                </div>
                <div class="metric-box right-metric">
                    <label>Recorded Time</label>
                    <span id="readOnlyTime" class="timer-display">00:00:00</span>
                </div>
                <div class="metric-box" style="border-left:1px solid var(--border); padding-left:10px;">
                     <label>Status</label>
                     <span id="readOnlyStatus" class="chip">Pending</span>
                </div>
            </div>

            <div id="historyMetricsPanel" class="metrics-panel hidden history-edit-mode">
                 <div class="history-controls-row">
                    <label class="cb-label">
                        <input type="checkbox" id="histCompletedCb" class="big-cb">
                        <span>Mark as Completed?</span>
                    </label>
                 </div>
                 <div class="history-inputs-row">
                     <div class="metric-box">
                        <label>Count</label>
                        <input type="number" id="histCounterInput" class="modal-num-input" />
                     </div>
                     <div class="metric-box">
                        <label>Time (HH:MM:SS)</label>
                        <input type="text" id="histTimerInput" class="modal-num-input" placeholder="00:00:00" />
                     </div>
                 </div>
                 <button id="saveHistoryBtn" class="btn-save-small">Update History Record</button>
            </div>

          <div id="viewModeContainer" class="mode-container">
              <h2 id="viewTitle" class="view-title-text"></h2>
              
              <div class="section" id="viewSubtasksSection">
                  <label>&#9745; Subtasks</label> 
                  <div id="viewSubtasksList" class="view-list-container" style="display:flex; flex-direction:column; gap:5px;"></div>
              </div>

              <div class="section">
                  <label>&#128230; Required Items</label> 
                  <div id="viewItemsList" class="view-list-container"></div>
              </div>
              <div class="section">
                  <label>&#128221; Procedure</label> 
                  <div id="viewStepsList" class="view-steps-container"></div>
              </div>
          </div>

          <div id="editModeContainer" class="mode-container hidden">
            <div class="section">
                <label>Task Title</label>
                <input type="text" id="modalTaskTitle" class="modal-input-title" placeholder="Task Name..." />
            </div>
            <div class="section">
                <label>Category</label>
                <input type="text" id="modalCategoryInput" class="step-input" placeholder="e.g. Work" />
            </div>
            <div class="section">
                <label>Unit Measurement</label>
                <input type="text" id="modalUnitInput" class="step-input" placeholder="e.g. Pages, Reps, Minutes..." />
            </div>
            <div class="section">
              <label>Position</label>
                <button id="moveTaskBtn" class="btn-dashed" style="text-align:left;">&#128205; Move Task Location...</button>
              </div>
              
              <div class="section">
                  <label>&#9745; Subtasks (Must finish all to complete parent)</label>
                  <div class="items-editor">
                      <div id="editSubtasksList" class="subtasks-container"></div>
                      <div class="input-group-small">
                          <input type="text" id="subtaskInput" class="item-input" placeholder="New Subtask..." />
                          <button id="addSubtaskBtn" class="btn-action-small">Add</button>
                      </div>
                  </div>
              </div>

              <div class="section">
                  <label>&#128230; Edit Items</label>
                  <div class="items-editor">
                      <div id="editItemsList" class="tags-container"></div>
                      <div class="input-group-small">
                          <input type="text" id="itemInput" class="item-input" placeholder="New Item..." />
                          <button id="addItemBtn" class="btn-action-small">Add</button>
                      </div>
                  </div>
              </div>
              <div class="section">
                  <label>&#128221; Edit Procedure</label>
                  <div id="editStepsList" class="steps-editor"></div>
                  <button id="addStepBtn" class="btn-dashed">+ Add Step</button>
              </div>
              <div class="save-row">
                  <button id="saveDetailBtn" class="btn-save">Save Changes</button>
              </div>
          </div>
        </div>
      </div>
    </dialog>
    <dialog id="posModal" class="modal">
      <div class="modal-wrapper">
        <h3 id="posModalTitle">Select Position</h3>
        <div id="posList" class="pos-list"></div>
        <button onclick="document.getElementById('posModal').close()" class="btn-cancel">Cancel</button>
      </div>
    </dialog>
  </main>
</Layout>

<script>
  // --- INTERFACES & GLOBALS ---
  interface HistoryLog { sessionId: string; completed: boolean; snapshotCounter: number; snapshotTimer: number; }
  interface Subtask { id: string; text: string; completed: boolean; }
  interface Task { id: number; text: string; completed: boolean; priority: number; category: string; requiredItems: string | string[]; procedure: string | string[]; activeCounter: number; activeTimer: number; history: HistoryLog[]; unit: string; subtasks: Subtask[]; }
  interface Session { sessionId: string; timestamp: number; }

  declare global {
    interface Window {
      toggleDropdown: (e: Event, id: number) => void;
      openModal: (id: number, mode?: 'view' | 'edit') => void;
      openHistoryModal: (taskId: number, sessionId: string) => void;
      closeModal: () => void;
      deleteItem: (idx: number) => void;
      deleteSubtask: (idx: number) => void;
      updateStep: (idx: number, val: string) => void;
      deleteStep: (idx: number) => void;
      moveStep: (idx: number, dir: number) => void;
      remove: (id: number) => void;
      updateCounter: (delta: number) => void;
      toggleTimer: () => void;
      resetTimer: () => void;
      triggerDestruction: (x: number, y: number) => void;
      // Updated Signature for toggleSubtask
      toggleSubtask: (e: MouseEvent, taskId: number, subtaskId: string) => void;
    }
  }

  const BASE_URL = import.meta.env.PUBLIC_BACKEND_URL;
  const API_URL = `${BASE_URL}/todos`; 
  const HIST_API_URL = `${API_URL}/history`;
  
  let todos: Task[] = [];
  let sessions: Session[] = [];
  let targetPriority: number | null = null; 
  let currentId: number | null = null;
  let editingSessionId: string | null = null; 
  let tempItems: string[] = [];
  let tempSteps: string[] = [];
  let tempSubtasks: Subtask[] = [];
  let timerInterval: any = null;
  let tempTimerSeconds = 0;
  let tempCounterValue = 0;
  let isTimerRunning = false;

  // --- CANVAS ENGINE (Cracks & Sparks) ---
  const canvas = document.getElementById('effectCanvas') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d');
  let effects: any[] = [];
  
  function resizeCanvas() { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }
  window.addEventListener('resize', resizeCanvas);
  resizeCanvas();

  const sparkColors = ['#ff0000', '#ff4d00', '#ffae00', '#ffffff'];
  class Spark {
      x: number; y: number; vx: number; vy: number; size: number; color: string; life: number;
      constructor(x: number, y: number) {
          this.x = x; this.y = y;
          const angle = Math.random() * Math.PI * 2;
          const speed = Math.random() * 10 + 5; 
          this.vx = Math.cos(angle) * speed; this.vy = Math.sin(angle) * speed;
          this.size = Math.random() * 3 + 1;
          this.color = sparkColors[Math.floor(Math.random() * sparkColors.length)];
          this.life = 1.0;
      }
      update() { this.x += this.vx; this.y += this.vy; this.vy += 0.3; this.life -= 0.03; }
      draw(ctx: CanvasRenderingContext2D) {
          ctx.globalAlpha = this.life; ctx.fillStyle = this.color; ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill(); ctx.globalAlpha = 1;
      }
  }

  class Crack {
      path: {x:number, y:number}[] = []; life: number = 1.0;
      constructor(startX: number, startY: number) { this.generatePath(startX, startY, -1); this.generatePath(startX, startY, 1); }
      generatePath(sx: number, sy: number, dir: number) {
          let cx = sx; let cy = sy; this.path.push({x: cx, y: cy});
          for(let i=0; i<20; i++) { cx += (Math.random() * 30 + 20) * dir; cy += (Math.random() * 40 - 20); this.path.push({x: cx, y: cy}); }
      }
      update() { this.life -= 0.04; }
      draw(ctx: CanvasRenderingContext2D) {
          if(this.life <= 0) return;
          ctx.save(); ctx.globalAlpha = this.life; ctx.shadowBlur = 20; ctx.shadowColor = '#ff0000';
          ctx.lineWidth = 4; ctx.strokeStyle = '#fff'; ctx.lineCap = 'round'; ctx.lineJoin = 'round';
          ctx.beginPath(); let first = true;
          this.path.forEach(p => { if(first) { ctx.moveTo(p.x, p.y); first=false; } else ctx.lineTo(p.x, p.y); });
          ctx.stroke();
          ctx.lineWidth = 8; ctx.strokeStyle = 'rgba(255, 0, 0, 0.5)'; ctx.stroke();
          ctx.restore();
      }
  }

  function loop() {
      ctx?.clearRect(0, 0, canvas.width, canvas.height);
      for (let i = effects.length - 1; i >= 0; i--) {
          effects[i].update(); effects[i].draw(ctx!);
          if (effects[i].life <= 0) effects.splice(i, 1);
      }
      requestAnimationFrame(loop);
  }
  loop();

  window.triggerDestruction = (x: number, y: number) => {
      for (let i = 0; i < 40; i++) { effects.push(new Spark(x, y)); }
      effects.push(new Crack(x, y));
  };

  // --- DATA & RENDER LOGIC ---
  async function loadTasks() {
    try {
      const res = await fetch(API_URL);
      const data = await res.json();
      
      // FIX: Sanitize incoming data to ensure JSON fields are Arrays, not strings
      const rawTasks = data.tasks || [];
      todos = rawTasks.map((t: any) => ({
          ...t,
          subtasks: typeof t.subtasks === 'string' ? JSON.parse(t.subtasks) : (t.subtasks || []),
          requiredItems: typeof t.requiredItems === 'string' ? JSON.parse(t.requiredItems) : (t.requiredItems || []),
          procedure: typeof t.procedure === 'string' ? JSON.parse(t.procedure) : (t.procedure || [])
      }));
      
      sessions = data.sessions || [];
      render();
    } catch(e) { console.error(e); }
  }

  function render() {
    const list = document.getElementById('taskList') as HTMLElement;
    document.getElementById('countBadge')!.innerText = `${todos.length} Tasks`;
    list.innerHTML = '';
    const visibleSessions = [...sessions].reverse().slice(-6); 
    todos.forEach(t => createTaskElement(t, visibleSessions));
  }

  function createTaskElement(task: Task, visibleSessions: Session[]) {
    // subtasks are now guaranteed to be an array due to loadTasks fix
    const subtasks = task.subtasks || [];
    const allSubtasksDone = subtasks.length === 0 || subtasks.every(s => s.completed);

    const li = document.createElement('li');
    li.id = `task-row-${task.id}`; 
    li.className = `task-card-container ${task.completed ? 'done' : ''}`;

    // Main Row
    const mainRow = document.createElement('div');
    mainRow.className = 'task-card-main';
    
    const cbContainer = document.createElement('div');
    cbContainer.className = 'cb-container';
    const cb = document.createElement('input');
    cb.type = 'checkbox'; cb.className = 'big-cb'; 
    cb.checked = task.completed;
    
    // Disable Parent Checkbox if subtasks pending
    if (!allSubtasksDone) {
        cb.disabled = true;
        cb.classList.add('cb-disabled');
        cb.title = "Complete all subtasks first";
    }
    
    cb.onclick = (e: MouseEvent) => { 
        e.stopPropagation(); 
        if (!allSubtasksDone) {
            alert("Please complete all subtasks first.");
            cb.checked = false;
            return;
        }
        if (!task.completed) {
            window.triggerDestruction(e.clientX, e.clientY);
            const row = document.getElementById(`task-row-${task.id}`);
            if(row) { row.classList.add('destruction-mode'); }
        }
        toggle(task.id, task.completed); 
    };

    cbContainer.appendChild(cb);
    const titleSection = document.createElement('div');
    titleSection.className = 'title-section';
    let catHtml = '';
    if (task.category && task.category.trim() !== '') { catHtml = `<span class="chip">${task.category}</span>`; }
    
    const hasDetails = (task.requiredItems?.length > 0) || (task.procedure?.length > 0) || (subtasks.length > 0);
    const detailIndicator = hasDetails ? '<span class="icon-indicator" title="Has Details">&#128221;</span>' : '';

    titleSection.innerHTML = `
        <div class="task-main-text"><span class="task-title">${task.text}</span>${detailIndicator}</div>
        <div class="task-meta">${catHtml}</div>
    `;
    titleSection.onclick = () => window.openModal(task.id, 'view');

    let historyHtml = '<div class="dropdown-history-grid">';
    visibleSessions.forEach(s => {
      const log = task.history ? task.history.find(h => h.sessionId === s.sessionId) : null;
      const isDone = log ? log.completed : false;
      const d = new Date(s.timestamp).toLocaleDateString('en-US',{weekday:'short'});
      historyHtml += `<div class="dh-row" onclick="openHistoryModal(${task.id}, '${s.sessionId}')"><span class="dh-date">${d}</span><div class="h-box ${isDone?'h-done':'h-miss'}" style="opacity:${log?1:0.3}"></div></div>`;
    });
    historyHtml += `<div class="dh-row" style="border-top:1px solid #444; padding-top:4px; margin-top:2px;"><span class="dh-date active-header">NOW</span><div class="h-box ${task.completed?'h-live-done':'h-live-pending'}">&bull;</div></div></div>`;

    const dropdown = document.createElement('div');
    dropdown.className = 'dropdown';
    dropdown.innerHTML = `<button class="btn-icon btn-more" onclick="toggleDropdown(event, ${task.id})">&#8942;</button><div id="dropdown-${task.id}" class="dropdown-content"><div class="dd-label">History (Last 7 Days)</div>${historyHtml}<div class="dd-divider"></div><div onclick="openModal(${task.id}, 'edit')">&#9999; Edit Details</div><div onclick="remove(${task.id})" class="danger-text">&#128465; Delete</div></div>`;
    
    mainRow.append(cbContainer, titleSection, dropdown);
    li.appendChild(mainRow);

    // Render Subtasks
    if (subtasks.length > 0) {
        const ulSub = document.createElement('ul');
        ulSub.className = 'subtask-list';
        subtasks.forEach(sub => {
            const liSub = document.createElement('li');
            liSub.className = 'subtask-item';
            // Added event argument to toggleSubtask
            liSub.innerHTML = `
                <div class="sub-cb-wrapper">
                  <input type="checkbox" class="sub-cb" ${sub.completed ? 'checked' : ''} onclick="toggleSubtask(event, ${task.id}, '${sub.id}')"/>
                </div>
                <span class="${sub.completed ? 'sub-done' : ''}">${sub.text}</span>
            `;
            ulSub.appendChild(liSub);
        });
        li.appendChild(ulSub);
    }

    document.getElementById('taskList')!.appendChild(li);
  }

  // --- SUBTASK LOGIC FIXED ---
  window.toggleSubtask = async (e, taskId, subtaskId) => {
    // Stop propagation so we don't trigger row click
    if (e && e.stopPropagation) e.stopPropagation();

    const task = todos.find(t => t.id === taskId);
    if (!task) return;

    // Task.subtasks is already an array thanks to loadTasks()
    const subtask = task.subtasks.find(s => s.id === subtaskId);
    if (!subtask) return;
    
    // VISUAL EFFECT for Subtask
    if (!subtask.completed) {
        window.triggerDestruction(e.clientX, e.clientY);
    }

    // Update State
    subtask.completed = !subtask.completed;
    
    // If a subtask becomes unchecked, the parent MUST be unchecked
    if (!subtask.completed && task.completed) {
        task.completed = false;
        await fetch(`${API_URL}/${taskId}/toggle`, {method:'PATCH', headers:{'Content-Type':'application/json'}, body:JSON.stringify({completed:false})});
    }

    // Re-render immediately to update UI state
    render(); 

    // Save subtasks state
    await fetch(`${API_URL}/${taskId}`, { 
        method:'PATCH', 
        headers:{'Content-Type':'application/json'}, 
        body: JSON.stringify({ subtasks: task.subtasks }) 
    });
  };

  // --- STANDARD ACTIONS ---
  function stopLiveTimer() { if(timerInterval) clearInterval(timerInterval); isTimerRunning = false; const btn = document.getElementById('btnTimerToggle'); if(btn) { btn.innerText = "Start"; btn.classList.remove('btn-active'); } }
  async function saveMetrics() { if(currentId === null || editingSessionId !== null) return; await fetch(`${API_URL}/${currentId}`, { method:'PATCH', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ activeCounter: tempCounterValue, activeTimer: tempTimerSeconds }) }); }
  window.updateCounter = (delta) => { tempCounterValue = Math.max(0, tempCounterValue + delta); document.getElementById('displayCounter')!.innerText = tempCounterValue.toString(); saveMetrics(); };
  function formatTime(secs) { const h = Math.floor(secs / 3600), m = Math.floor((secs % 3600) / 60), s = secs % 60; return `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`; }
  function parseTimeToSeconds(timeStr) { const parts = timeStr.split(':').reverse(); let s = 0; if(parts[0]) s += parseInt(parts[0]); if(parts[1]) s += parseInt(parts[1]) * 60; if(parts[2]) s += parseInt(parts[2]) * 3600; return isNaN(s) ? 0 : s; }
  window.toggleTimer = () => { const btn = document.getElementById('btnTimerToggle') as HTMLElement; if (isTimerRunning) { stopLiveTimer(); saveMetrics(); } else { isTimerRunning = true; btn.innerText = "Stop"; btn.classList.add('btn-active'); timerInterval = setInterval(() => { tempTimerSeconds++; document.getElementById('displayTimer')!.innerText = formatTime(tempTimerSeconds); }, 1000); } };
  window.resetTimer = () => { stopLiveTimer(); if(confirm("Reset Timer to 0?")) { tempTimerSeconds = 0; document.getElementById('displayTimer')!.innerText = "00:00:00"; saveMetrics(); } };
  
  window.openModal = (id, mode = 'view') => { 
      stopLiveTimer(); editingSessionId = null; const task = todos.find(t => t.id === id); if (!task) return; currentId = id; const unitName = task.unit || 'units'; document.getElementById('btnHistoryEdit')!.classList.add('hidden'); document.getElementById('historyStatsDisplay')!.classList.add('hidden'); document.getElementById('historyMetricsPanel')!.classList.add('hidden'); document.getElementById('metricsPanel')!.classList.remove('hidden'); tempCounterValue = task.activeCounter || 0; tempTimerSeconds = task.activeTimer || 0; document.getElementById('displayCounter')!.innerText = tempCounterValue.toString(); document.getElementById('displayTimer')!.innerText = formatTime(tempTimerSeconds); document.getElementById('lblCounter')!.innerText = `How many ${unitName} you did`; document.getElementById('lblTimer')!.innerText = `How much time spent in ${unitName}`; 
      
      // Safety handled in loadTasks, but kept for robustness
      try { tempItems = typeof task.requiredItems === 'string' ? JSON.parse(task.requiredItems) : (task.requiredItems || []); } catch(e) { tempItems = []; } 
      try { tempSteps = typeof task.procedure === 'string' ? JSON.parse(task.procedure) : (task.procedure || []); } catch(e) { tempSteps = []; } 
      try { tempSubtasks = typeof task.subtasks === 'string' ? JSON.parse(task.subtasks) : (task.subtasks || []); } catch(e) { tempSubtasks = []; }

      const viewContainer = document.getElementById('viewModeContainer') as HTMLElement; const editContainer = document.getElementById('editModeContainer') as HTMLElement; 
      
      if (mode === 'view') { 
          viewContainer.classList.remove('hidden'); editContainer.classList.add('hidden'); document.getElementById('modalHeaderTitle')!.innerText = "Task Details"; document.getElementById('viewTitle')!.innerText = task.text; 
          const vItems = document.getElementById('viewItemsList')!; vItems.innerHTML = tempItems.length ? tempItems.map(i => `<span class="view-tag">${i}</span>`).join('') : '<span class="empty-text">No items.</span>'; 
          const vSteps = document.getElementById('viewStepsList')!; vSteps.innerHTML = tempSteps.length ? tempSteps.map((s, i) => `<div class="view-step-row"><span class="step-num">${i+1}.</span><span>${s}</span></div>`).join('') : '<span class="empty-text">No procedure.</span>'; 
          
          // Render Subtasks in View Mode
          const vSub = document.getElementById('viewSubtasksList')!;
          if (tempSubtasks.length > 0) {
              vSub.innerHTML = tempSubtasks.map(s => `<div class="view-step-row"><span style="color:var(${s.completed?'--green':'--red'})">${s.completed?'&#9745;':'&#9744;'}</span> <span>${s.text}</span></div>`).join('');
              document.getElementById('viewSubtasksSection')!.classList.remove('hidden');
          } else {
              document.getElementById('viewSubtasksSection')!.classList.add('hidden');
          }

      } else { 
          viewContainer.classList.add('hidden'); editContainer.classList.remove('hidden'); document.getElementById('metricsPanel')!.classList.add('hidden'); document.getElementById('modalHeaderTitle')!.innerText = "Edit Task"; 
          (document.getElementById('modalTaskTitle') as HTMLInputElement).value = task.text; 
          (document.getElementById('modalUnitInput') as HTMLInputElement).value = unitName; 
          (document.getElementById('modalCategoryInput') as HTMLInputElement).value = task.category || ''; 
          renderEditContent(); 
      } 
      (document.getElementById('detailModal') as HTMLDialogElement).showModal(); document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show')); 
  };

