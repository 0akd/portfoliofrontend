    // SEND STRING DIRECTLY
    await fetch(API_URL, { 
        method:'POST', 
        headers:{'Content-Type':'application/json'}, 
        body:JSON.stringify({
            text:t.value, 
            category: c.value, 
            priority:targetPriority
        })
    });
    
    t.value=''; c.value=''; loadTasks();
  }

